<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pt.ua.cm.nomada.RegisterActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mar"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/registerUserInsert"
        android:textColor="#3ca4bf"
        android:hint="Username"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/registerEmailInsert"
        android:textColor="#3ca4bf"
        android:hint="Email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registerPwdInsert"
        android:hint="Password"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registerPwdConfInsert"
        android:hint="Confirm password"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Birthdate"
        android:id="@+id/registerBdayLabel"
        android:textColor="#3ca4bf"
        android:padding="5dp" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerBdayDatePicker"
        android:calendarViewShown="false"
        android:calendarTextColor="#3ca4bf"
        android:datePickerMode="spinner"
        android:firstDayOfWeek="1"
        android:paddingLeft="50dp"
        android:measureAllChildren="false"
        android:spinnersShown="true"
        android:startYear="1950"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerRegBtn"
        android:layout_gravity="center_horizontal"
        android:textColor="#3ca4bf"
        android:background="#1cffffff"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="5dp"
        android:onClick="register"
        android:textSize="20dp" />

</LinearLayout>
