<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pt.ua.cm.nomada.MarkAsFoundActivity"
    android:background="@drawable/mar"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/markAsFoundTitleLabel"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rate it:"
        android:id="@+id/markAsFoundRatingLabel"
        android:layout_marginTop="30dp"
        android:textColor="#3ca4bf"
        android:layout_marginBottom="5dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:id="@+id/markAsFoundRatingPicker"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:solidColor="#3ca4bf"
        android:scrollIndicators="top"
        android:layout_weight="0.10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comment:"
        android:id="@+id/markAsFoundCommentLabel"
        android:layout_marginTop="10dp"
        android:textColor="#3ca4bf"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/markAsFoundCommentEditText"
        android:layout_gravity="center_horizontal"
        android:lines="6"
        android:background="#85010101"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Found it!"
        android:id="@+id/markAsFoundBtn"
        android:textColor="#3ca4bf"
        android:background="#1cffffff"
        android:onClick="markAsFound"
        android:layout_marginTop="50dp"
        android:layout_gravity="center" />

</LinearLayout>
